<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.signup.SignupSuccess">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup_complete"
        app:layout_constraintBottom_toTopOf="@id/signupTv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/signupTv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="가입이 완료되었습니다."
        android:textColor="#000000"
        android:textSize="30sp"
        android:fontFamily="@font/ns_r"
        app:layout_constraintBottom_toTopOf="@id/signupTv2"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/signupTv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인하시면 다양한 서비스와 혜택을 \n이용하실 수 있습니다."
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/ns_r"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45"
        />

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:text="로그인"
        android:textSize="20sp"
        android:textColor="#fff"
        android:fontFamily="@font/ns_r"
        android:background="@drawable/login_button"
        app:layout_constraintTop_toBottomOf="@id/signupTv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>