<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="254sp"
        android:layout_height="144sp"
        android:background="@drawable/dialog_background">

        <TextView
            android:id="@+id/dialogTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26sp"
            android:text="대여하기"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/ns_b"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialogTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26sp"
            android:text="대여를 종료하시겠습니까?"
            android:fontFamily="@font/ns_b"
            android:textColor="#5e5e5e"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@id/dialogTv2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="18sp"
            app:layout_constraintHeight_percent="0.3"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/rentalEndBtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="예"
                android:textColor="#3e58db"
                android:textSize="18sp"
                android:fontFamily="@font/ns_b"
                android:background="@null"
                />

            <Button
                android:id="@+id/rentalEndBtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="아니오"
                android:textColor="#5e5e5e"
                android:textSize="18sp"
                android:fontFamily="@font/ns_b"
                android:background="@null"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>