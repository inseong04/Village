<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wholeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/homeImageIv"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/productTitleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/ns_b"
            android:text="테스트"
            android:textColor="#000"
            android:textSize="27sp"
            app:layout_constraintLeft_toRightOf="@id/homeImageIv"
            app:layout_constraintRight_toLeftOf="@id/rentalTv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rentalTv"
            android:layout_width="70sp"
            android:layout_height="25sp"
            android:text="대여가능"
            android:padding="5sp"
            android:gravity="center"
            android:fontFamily="@font/ns_r"
            android:textColor="#fff"
            android:background="@drawable/rental_false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            />


        <TextView
            android:id="@+id/sellerLocationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/ns_r"
            android:text="용산구 청파동"
            android:textColor="#545454"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/homeImageIv"
            app:layout_constraintTop_toBottomOf="@id/productTitleTv" />

        <TextView
            android:id="@+id/productPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/ns_b"
            android:text="10,000"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/homeImageIv"
            app:layout_constraintTop_toBottomOf="@id/sellerLocationTv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>