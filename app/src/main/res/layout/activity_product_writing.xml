<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".productwritng.ProductWriting">

    <data>
        <variable
            name="activity"
            type="com.example.village.productwritng.ProductWriting" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/callGallery"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:padding="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageRecycleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#919191"
            app:layout_constraintTop_toBottomOf="@id/imageRecycleView"
            />

        <EditText
            android:id="@+id/productNameEtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            android:hint="상품명 입력"
            android:fontFamily="@font/ns_r"
            android:background="@drawable/writing_input_box"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/productNameEtv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/priceEtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:hint="가격 입력"
                android:fontFamily="@font/ns_r"
                android:inputType="number"
                android:background="@drawable/writing_input_box"
                android:padding="15dp"
                />

            <Spinner
                android:id="@+id/periodSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:background="@drawable/writing_input_box"
                android:entries="@array/period"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/hashtagEtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            android:hint="#연관해시태그입력"
            android:fontFamily="@font/ns_r"
            android:background="@drawable/writing_input_box"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            />

        <EditText
            android:id="@+id/descriptionEtv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.8"
            android:hint="상품 설명 입력"
            android:fontFamily="@font/ns_r"
            android:gravity="left"
            android:background="@drawable/writing_input_box"
            app:layout_constraintTop_toBottomOf="@id/hashtagEtv"
            app:layout_constraintBottom_toTopOf="@id/goHomeBtn"
            app:layout_constraintLeft_toLeftOf="@id/hashtagEtv"
            app:layout_constraintRight_toRightOf="@id/hashtagEtv"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            />
        <Button
            android:id="@+id/goHomeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.4"
            android:text="상품 등록하기"
            android:fontFamily="@font/ns_r"
            android:textColor="#ffffff"
            android:background="@drawable/writing_button_box"
            app:layout_constraintTop_toBottomOf="@+id/descriptionEtv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>