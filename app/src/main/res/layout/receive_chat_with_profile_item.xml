<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10sp"
    >

    <ImageView
        android:id="@+id/chatIv"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/profile_icon"
        app:layout_constraintTop_toTopOf="@id/receiveTextTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/receiveTextTv"
        />

    <TextView
        android:id="@+id/receiveTextTv"
        android:layout_width="wrap_content"
        android:maxWidth="214sp"
        android:layout_height="wrap_content"
        tools:text="테스트입니다"
        android:textColor="#000000"
        android:fontFamily="@font/ns_r"
        android:textSize="14sp"
        android:background="@drawable/receive_background"
        android:padding="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chatIv"
        android:layout_marginLeft="10sp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>