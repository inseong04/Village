<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="254sp"
    android:layout_height="144sp"
    tools:context=".screen.chating.RentalDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_background">

        <TextView
            android:id="@+id/rentalDialogTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26sp"
            android:text="대여하기"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/ns_b"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rentalDialogTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26sp"
            android:text="@{content}"
            android:fontFamily="@font/ns_b"
            android:textColor="#5e5e5e"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="VR STATION 을(를) \n대여하시겠습니까?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@id/rentalDialogTv2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="18sp"
            app:layout_constraintHeight_percent="0.3"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/rentalDialogBtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="예"
                android:textColor="#3e58db"
                android:textSize="18sp"
                android:fontFamily="@font/ns_b"
                android:background="@null"
                />

            <Button
                android:id="@+id/rentalDialogBtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="아니오"
                android:textColor="#5e5e5e"
                android:textSize="18sp"
                android:fontFamily="@font/ns_b"
                android:background="@null"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>